  FindlibParent: redis
  Findlibname: sync
  Modules: Redis_sync
  BuildDepends: redis

Library redis_lwt
  Path: src_lwt
  Build$: flag(lwt)
  Install$: flag(lwt)
  FindlibParent: redis
  Findlibname: lwt
  Modules: Redis_lwt
  BuildDepends: redis, lwt.unix, lwt

Flag examples
  Description: Build the examples
  Default: false

Executable redis_examples
  Path: examples
  MainIs: examples.ml
  Build$: flag(examples)
  Install: false
  CompiledObject: best
  BuildDepends: threads, core, redis, redis.sync, redis.lwt, lwt.unix, lwt

Executable test
  Path: test
  CompiledObject:     best
  MainIs: test_sync.ml
  BuildDepends: oUnit, redis, redis.sync
  Install: false
  Build$: flag(tests)

Executable test_lwt
  Path: test
  CompiledObject:     best
  MainIs: test_lwt.ml
  BuildDepends: oUnit, redis, redis.lwt
  Install: false
  Build$: flag(tests) && flag(lwt)

Test test
  Run$: flag(tests)
  Command: $test

Test test_lwt
  Run$: flag(tests) && flag(lwt)
  Command: $test_lwt

